<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="260dp"
    android:layout_height="350dp"
    android:background="@drawable/dialog_add_action_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:text="添加动作"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            />

        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="59dp"
            android:layout_height="18dp"
            android:layout_below="@id/tv_title"
            android:text="点名称："
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/tv_point_name"
            android:layout_width="160.5dp"
            android:layout_height="25dp"
            android:background="@drawable/bt_bg_action"
            android:layout_alignBaseline="@id/tv_text1"
            android:layout_toRightOf="@id/tv_text1"
            android:layout_marginLeft="4dp"
            android:text="选择路径点"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:drawableRight="@mipmap/xlright_5"
            />
        <TextView
            android:id="@+id/tv_text2"
            android:layout_width="59dp"
            android:layout_height="18dp"
            android:layout_below="@id/tv_text1"
            android:text="动作类型："
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="25.5dp"
            />
        <TextView
            android:id="@+id/tv_action_name"
            android:layout_width="160.5dp"
            android:layout_height="25dp"
            android:background="@drawable/bt_bg_action"
            android:layout_alignBaseline="@id/tv_text2"
            android:layout_toRightOf="@id/tv_text2"
            android:layout_marginLeft="4dp"
            android:text="选择动作类型"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:drawableRight="@mipmap/xlright_5"
            />
        <TextView
            android:id="@+id/tv_text3"
            android:layout_width="59dp"
            android:layout_height="18dp"
            android:layout_below="@id/tv_text2"
            android:text="角度："
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="25.5dp"
            />
        <ddr.example.com.svgmapclient.widget.edit.DDREditText
            android:id="@+id/et_toward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_text3"
            android:layout_below="@id/tv_action_name"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="4dp"
            />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:text="取消"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12sp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="#3a3a3a"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"/>
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="120dp"
            android:layout_height="24dp"
            android:text="确定"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"
            android:textColor="@color/blue01"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_toRightOf="@id/tv_cancel"
            android:layout_marginLeft="19dp"
            />
    </RelativeLayout>
</LinearLayout>